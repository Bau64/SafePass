<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Base.Theme.SafePass" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/app_blue</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorTertiary">@color/white</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="app.buttons" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="PositiveButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="app.checkbox" parent="Widget.Material3.CompoundButton.CheckBox">
        
    </style>
</resources>